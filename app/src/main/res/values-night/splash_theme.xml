<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Splash Screen Theme. -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/gray_900</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/nasa_logo_anim</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.PictureOfTheDay.Main</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray_900</item>
        <item name="android:navigationBarColor">@color/gray_900</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>